<%-
  mem = case job_type
          when "small"
            "20"
          when "medium"
            "64"
          when "large"
            "256"
          else
            "4"
          end
  ppn = case job_type
          when "quick"
            "2"
          when "small"
            "4"
          else
            "8"
          end
  queue = case job_type
          when "medium"
            "medmem"
          when "large"
            "bigmem"
          end
-%>
---
batch_connect:
  template: "basic"
  conn_params:
    -  csrf_token
script:
  email: <%= ENV["USER"] %>@fredhutch.org
  queue_name: "<%= queue %>"
